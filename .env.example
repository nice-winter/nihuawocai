# Logger Level, See: https://github.com/unjs/consola?tab=readme-ov-file#log-level
CONSOLA_LEVEL=4

# Cookie Encryption Key
NUXT_SESSION_PASSWORD=a-random-password-with-at-least-32-characters

# OAuth Providers
NUXT_OAUTH_GITHUB_CLIENT_ID=<YOUR_CLIENT_ID>
NUXT_OAUTH_GITHUB_CLIENT_SECRET=<YOUR_CLIENT_SECRET>

NUXT_OAUTH_STEAM_API_KEY=<YOUR_API_KEY>

NUXT_OAUTH_X_CLIENT_ID=<YOUR_CLIENT_ID>
NUXT_OAUTH_X_CLIENT_SECRET=<YOUR_CLIENT_SECRET>

